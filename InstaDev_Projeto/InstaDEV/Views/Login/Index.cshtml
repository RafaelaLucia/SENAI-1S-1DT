@{
    ViewData["Title"] = "Login";
}

<main class="Lmain">
        <form class="login" method="POST" action='@Url.Action("Logar")'>

            <img class="l_logo" src="/img/Instadev (1).png" alt="Logo InstaDev">
            <div class="l.campo">
                <input type="email" name="Email" placeholder="Email" required />
            </div>

            <div class="l_campo">
                <input type="password" name="Senha" placeholder="Senha" required />
            </div>

            <a href="feed.html">
                @* <a href="feed.html" class="l_botaoEntrarTeste">Entrar</a> *@
                <button type="submit" class="l_botaoEntrar">Entrar</button>
            </a>

            <div class="LesqueceuSenha">
                @TempData.Peek("Mensagem")
                <hr>
                <span class="Lou">ou</span>
                <hr>
            </div>
            <a class="l_padraoLinks esqueceuSenhaLink" href="">Esqueceu a senha?</a>
        </form>

        <section class="l_cadastrese">
            @* <span class="l_padraoFonte">Não tem uma conta? <a class="l_padraoLinks" href="Cadastro.html">Cadastre-se</a></span> *@
            <span class="l_padraoFonte">Não tem uma conta? <a asp-area="" asp-controller="Cadastro" asp-action="Index" class="l_padraoLinks">Cadastre-se</a></span>
        </section>

        <section class="LappsLink">
            <div class="l_quadradoSpan">
                <span class="l_padraoFonte">Obtenha o aplicativo.</span>
            </div>
            <div class="Lapp">
                <img src="/img/apple.png" alt="App store">
                <img src="/img/playstore.png" alt="Google play">
            </div>
        </section>